<Window x:Class="SheduleCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SheduleCreator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Главный контент -->
        <StackPanel x:Name="MainContent" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Просмотр предметов и учителей" Click="ViewSubjectsTeachers_Click" Margin="10" Padding="10"/>
            <Button Content="Изменить список предметов" Click="EditSubjects_Click" Margin="10" Padding="10"/>
            <Button Content="Изменить список учителей" Click="EditTeachers_Click" Margin="10" Padding="10"/>
            <Button Content="Расписание классов" Click="ClassSchedule_Click" Margin="10" Padding="10"/>
        </StackPanel>

        <!-- Frame для навигации -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Visibility="Collapsed"/>
    </Grid>
</Window>
