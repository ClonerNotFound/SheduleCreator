<Page x:Class="SheduleCreator.Pages.EditSubjectsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SheduleCreator.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditSubjectsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="Back" Content="Назад" Click="Back_Click"  Margin="5" Padding="10"/>
            <Button x:Name="AddSubject" Content="Добавить предмет" Click="AddSubject_Click" Margin="5" Padding="10"/>
            <Button x:Name="RemoveSubject" Content="Удалить предмет" Click="RemoveSubject_Click" Margin="5" Padding="10"/>
        </StackPanel>
        <DataGrid x:Name="SubjectsDataGrid" Grid.Row="1" AutoGenerateColumns="True" Margin="10"/>
    </Grid>
</Page>
